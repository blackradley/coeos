{
   "version": "0.2.0",
   "configurations": [
    {
        "name": "Flask: camera server",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "cwd": "${workspaceFolder}/camera",
        "env": {
            "FLASK_APP": "server",

        },
        "args": [
            "run",
            "--no-debugger",
            "--no-reload",
            "--port", "5000"
        ],
        "jinja": true
    },
    {
        "name": "Python: Current File (Integrated Terminal)",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${fileDirname}"
    },
    ]
}